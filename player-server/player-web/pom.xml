    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.player</groupId>
        <artifactId>player-server</artifactId>
        <version>${build.version}</version>
    </parent>

    <artifactId>player-web</artifactId>

    <packaging>war</packaging>

    <repositories>
